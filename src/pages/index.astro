---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <h1
      class="py-32 px-8 font-bold uppercase flex text-center justify-center text-4xl"
    >
      Under construction...
    </h1>
    <div class="flex flex-col">
      <div class="flex justify-center">
        <img
          class="px-4"
          src="/construction-transportation-hand-drawn-machine-svgrepo-com.svg"
          alt="image"
          width="80%"
          height="80%"
        />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    width: 100%;
    height: 100%;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
